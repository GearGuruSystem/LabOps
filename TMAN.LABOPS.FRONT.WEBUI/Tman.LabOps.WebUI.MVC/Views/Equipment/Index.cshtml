@model IEnumerable<EquipamentoDTO>

<h4>Equipamentos</h4>
<form asp-action="Cadastro" asp-controller="Equipamento" method="get">
    <button class="btn btn-primary">CADASTRAR NOVO EQUIPAMENTO</button>
</form>
<br />
<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Buscar...">
</div>
<div class="table-responsive">
    <table id="tabela-Equipamentos" class="table table-light table-hover table-borderless table-striped caption-top align-middle text-center">
        <caption>Lista de Equipamentos</caption>
        <thead>
            <tr>
                <th>#</th>
                <th>NOME</th>
                <th>INVENTARIO</th>
                <th>HOSTNAME</th>
                <th>SITUAÇÃO</th>
                <th>TIPO DE EQUIPAMENTO</th>
                <th>FABRICANTE</th>
            </tr>
        </thead>
        <tbody class="table-group-divider-top-color">
            @foreach (var equipamento in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e => equipamento.Id)</td>
                    <td>@Html.DisplayFor(e => equipamento.Nome)</td>
                    <td>@Html.DisplayFor(e => equipamento.Inventario)</td>
                    <td>@Html.DisplayFor(e => equipamento.Hostname)</td>
                    <td>@Html.DisplayFor(e => equipamento.SituacaoDto.Descricao)</td>
                    <td>@Html.DisplayFor(e => equipamento.TipoEquipamentoDto.Descricao)</td>
                    <td>@Html.DisplayFor(e => equipamento.FabricanteDto.Nome)</td>
                    <td>
                        <a href="javascript:" class="btn btn-primary btn-sm btn-detalhes" idEquipamento="@equipamento.Id">Detalhes</a>
                        <a asp-action="Editar" class="btn btn-info btn-sm" asp-route-id="@equipamento.Id">Editar</a>
                        <a asp-action="Deletar" class="btn btn-danger btn-sm" asp-route-id="@equipamento.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="pagination" class="mt-3"></div>

<div id="modalDetalhesEquipamentos" class="modal" tabindex="-1">
    <div class="modal-dialog modal-1g">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Detalhes</h3>
            </div>
            <div class="modal-body">
                <div id="detalhesEquipamento"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/tela-indexequipamento.js"></script>
}